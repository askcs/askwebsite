    // bower:js
    script(src='vendors/jQuery/dist/jquery.js')
    script(src='vendors/bootstrap-sass-official/vendor/assets/javascripts/bootstrap.js')
    script(src='vendors/angular/angular.js')
    // endbower
    // endbuild

    script(src='scripts/main.js')

    // build:js scripts/index.js
    script(src='vendors/jquery.slimscroll/jquery.slimscroll.js')
    script(src='vendors/fullPage.js/jquery.fullPage.js')
    script(src='vendors/jquery-ui/ui/jquery-ui.js')
    script(src='scripts/index.js')
    // endbuild